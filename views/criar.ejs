<!DOCTYPE html>
<html lang="pt-br">
    <%- include('./components/head.ejs') %>
<body>
        <%- include('./components/header.ejs') %>
        
        <% if(message != ""){%>

            <%- include('./components/alerts.ejs') %>
            
            <% } %>
            
    <main>
        <div class="container">

            <section id="cadastro">

                    

                <h2>Cadastre um Novo Filme</h2>

            <form method="POST" action="/criacao">

                <label for="numero">Nome</label>
      <input type="text" id="nome" name="nome" required>

      <label for="genero">Genero</label>
      <select name="genero"> 
        <option value=""></option>
        <option value="Aventura">Aventura</option>
        <option value="Ação">Ação</option>
        <option value="Animação">Animação</option>
        <option value="Comédia">Comédia</option>
        <option value="Comédia Romântica">Comédia Romântica</option>
        <option value="Comédia Dramática">Comédia Dramática</option>
        <option value="Documentário">Documentário</option>
        <option value="Drama">Drama</option>
        <option value="Faroeste">Faroeste</option>
        <option value="Ficção Científica">Ficção Científica</option>
        <option value="Musical"> Musical </option>
        <option value="Suspense">Suspense</option>
        <option value="Terror / Horror">Terror / Horror</option>

    </select>

      <label for="imagem">Link da imagem</label>
      <input type="url" id="imagem" name="imagem" required>

      <label for="diretor">Diretor</label>
      <input type="text" id="diretor" name="diretor" required>

      <label for="ano">Ano de Lançamento</label>
      <input type="number" id="ano" name="ano" required>
      
      <label for="descricao">Descrição do Filme</label>
      <input type="text" id="descricao" name="descricao" required>
      
      <button id="btnCadastrar" type="submit">Cadastrar</button>
            </form>
        </section>

    <%- include('./components/footer') %>

    <script src="/js/script.js"></script> 

</body>
</html>